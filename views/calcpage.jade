
doctype html
html(lang="en")
	head
		link(rel='stylesheet', href='/stylesheets/calc.css')
		script(type='text/javascript', src='/javascripts/hw3frontjs.js')
		

		script(type='text/javascript').
			var res = ValidateType(#{results});		
	body
		h1 Calculator
		
	
	div
		h4(id='error') #{error}
		h3(id='results') Result: #{results}
		
	div
		

		form(id='form', method='get')
			label(for='num1') Number 1
			input(type='text', name='num1')
			br
			label(for='method') Method:
			select(name='method')
				option(value='add') Add
				option(value='sub') Subtract
				option(value='mul') Multiply
				option(value='div') Divide
			br
			label(for='num2') Number 2
			input(type='text', name='num2')
			br
			button(type='submit') Compute 
			
